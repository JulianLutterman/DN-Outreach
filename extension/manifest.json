{
  "manifest_version": 3,
  "name": "DN Outreach",
  "description": "Generate & send personalised outreach e-mails from Specter company pages, with optional auto follow-up.",
  "version": "1.1.0",
  "key": "",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "identity",
    "identity.email",
    "notifications"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "https://cloud.langfuse.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "workflowUtils.js",
        "content-scripts/config.js",
        "content-scripts/utils.js",
        "content-scripts/ui.js",
        "content-scripts/extraction.js",
        "content-scripts/llm.js",
        "content-scripts/workflow.js",
        "content-scripts/auth.js",
        "content-scripts/state.js"
      ],
      "matches": [ "<all_urls>" ]
    }
  ],
  "action": {
    "default_title": "Specter Outreach"
  },
  "icons": {
    "16": "icons/icon16.png"
  }
}
